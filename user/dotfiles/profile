alias m=mvim
export EDITOR=vim

alias g=git
alias t="tig --all"

alias v=vagrant
alias d=docker

export GOPATH="${HOME}/go"
export PATH="./bin:${GOPATH}/bin:/usr/local/opt/go/libexec/bin:${PATH}"

export RBENV_ROOT=/usr/local/var/rbenv
! which rbenv >&- || eval "$(rbenv init -)"

backup() {
  local from="${1:?which path do you want to backup?}"
  local to="${2:?where do you $from backing up to?}"

  rsync --update --times --recursive --links --delete\
        --verbose --progress --human-readable \
        "$from" "$to"
}
